apiVersion: v1
kind: PersistentVolume
metadata:
  name: pv-servarr
  labels:
    app: servarr
spec:
  storageClassName: servarr
  capacity:
    storage: 10Gi
  accessModes:
    - ReadWriteOnce
  hostPath:
    path: /opt/servarr

---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: servarr-jellyfin-config
spec:
  storageClassName: servarr
  accessModes:
    - ReadWriteOnce
  resources:
    requests:
      storage: 1Gi
  volumeMode: Filesystem
  volumeName: pv-servarr
  selector:
    matchLabels:
      app: servarr

